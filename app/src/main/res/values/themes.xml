<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SpaceToon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="background">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">?attr/background</item>
    </style>


    <style name="defaultTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/text_primary_87</item>
    </style>


    <style name="normalTextStyle" parent="defaultTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="normalMediumTextStyle" parent="normalTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="normalSemiBoldTextStyle" parent="normalTextStyle">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>


    <style name="titleTextStyle" parent="defaultTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="titleMediumTextStyle" parent="titleTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="titleSemiBoldTextStyle" parent="titleTextStyle">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>


    <style name="captionTextStyle" parent="defaultTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="captionSemiBoldTextStyle" parent="captionTextStyle">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>


    <style name="overCaptionTextStyle" parent="defaultTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/font_size_over_caption</item>
    </style>

    <style name="normalTextStyle.profileTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_secondary_60</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>




</resources>