<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/single_day</item>
    </style>

    <style name="CheckedText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:drawableBottom">@drawable/ic_circles</item>
        <item name="android:fontFamily">@font/single_day</item>
    </style>

</resources>