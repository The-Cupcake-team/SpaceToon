<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_small" />
                    <stroke android:width="2dp" android:color="@color/purple_char_color" android:dashWidth="@dimen/spacing_small" android:dashGap="2dp" />
                    <padding android:bottom="@dimen/spacing" android:left="@dimen/spacing" android:right="@dimen/spacing" android:top="@dimen/spacing" />
                </shape>
            </item>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_char_color" />
                    <corners android:radius="@dimen/radius_small" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_small" />
            <solid android:color="@color/card" />
        </shape>
    </item>

</selector>
